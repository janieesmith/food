<div class="page-header">
  <h1>
    Restaurants
    <a href="/restaurants/new" class="btn btn-lg btn-success">New Restaurant</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant name</th>
        <th>Sponsor name</th>
        <th>Email address</th>
        <th>Address</th>
        <th>Phone number</th>
        <th>Logo</th>
        <th>Actions</th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.restaurant_name %></td>
        <td><%= restaurant.sponsor_name %></td>
        <td><%= restaurant.email_address %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone_number %></td>
        <td><img height="50px" src="<%= restaurant.logo %>"></td>
        <td>
          <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
          <a href="/restaurants/<%= restaurant.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          <a href="/delete_restaurant/<%= restaurant.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
