<div class="page-header">
  <h3><%= @restaurant.restaurant_name %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Restaurant name</dt>
      <dd><%= @restaurant.restaurant_name %>      </dd>
      <dt>Logo</dt>
      <dd>
        <img height="70px" src="<%= @restaurant.logo %>">
      </dd>
      <dt>Phone number</dt>
      <dd><%= @restaurant.phone_number %></dd>
      <dt>Address</dt>
      <dd><%= @restaurant.address %></dd>
      <dt>Sponsor name</dt>
      <dd><%= @restaurant.sponsor_name %></dd>
      <dt>Email address</dt>
      <dd><%= @restaurant.email_address %></dd>
    </dl>
    <dl>
      <dt>Menu Items</dt>
      <% MenuItem.where(:restaurant_id => @restaurant.id).each do |item| %>
      <ul>
        <li>
          <a href="/menu_items/<%= item.id %>">
            <%= item.menu_item_name %>
          </a>
        </li>
      </ul>
      <% end %>
    </dl>




    <div class="btn-group btn-group-justified">
      <a href="/restaurants" class="btn btn-primary">
        Back
      </a>
      <a href="/restaurants/<%= @restaurant.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_restaurant/<%= @restaurant.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
