<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">

<div class="page-header">
  <h1>
    Menu items
    <a href="/menu_items/new" class="btn btn-lg btn-success">New Menu item</a>
  </h1>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Restaurant</th>
        <th>Menu item name</th>
        <th>Description</th>
        <th>Photo</th>
        <th>Available Now</th>
        <th>Actions</th>
      </tr>

      <% @menu_items.each do |menu_item| %>
      <tr>

        <td><%= menu_item.restaurant.restaurant_name %></td>
        <td><%= menu_item.menu_item_name %></td>
        <td><%= menu_item.description %></td>
        <td><img height="50px" src="<%= menu_item.photo %>"></td>
        <td><%= menu_item.availability %></td>

        <td>
          <a href="/menu_items/<%= menu_item.id %>" class="btn btn-primary"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
          <a href="/menu_items/<%= menu_item.id %>/edit" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>
</a>
          <a href="/delete_menu_item/<%= menu_item.id %>" class="btn btn-danger" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
